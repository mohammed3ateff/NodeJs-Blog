<div class="author">
  <h1 class="author_heading">Hi, I am Mohammed.</h1>
  <p class="author_body">Web developer and civil engineer</p>
</div>
<img
  src="/img/hero-image.webp"
  alt="mohammed"
  class="hero-image"
  width="981"
  height="528"
/>

<section class="articles">
  <h2 class="articles_heading">Latest Posts</h2>
  <ul class="article-ul">
    <% data.forEach(post => { %>

    <li>
      <a href="/post/<%= post._id %>">
        <span> <%= post.title %> </span>
        <span class="article-list_data"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>

  <a href="/?page=<%= nextPage  %>" class="pagination">&lt; view Older Posts</a>

  <% } %>
</section>
